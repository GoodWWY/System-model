<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wwy.Mapper.QaRecordMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.wwy.Entity.QaRecord">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="question" property="question" jdbcType="LONGVARCHAR"/>
        <result column="answer" property="answer" jdbcType="LONGVARCHAR"/>
        <result column="model_name" property="modelName" jdbcType="VARCHAR"/>
        <result column="tokens_used" property="tokensUsed" jdbcType="INTEGER"/>
        <result column="response_time" property="responseTime" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="error_message" property="errorMessage" jdbcType="LONGVARCHAR"/>
        <result column="rating" property="rating" jdbcType="TINYINT"/>
        <result column="feedback" property="feedback" jdbcType="LONGVARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, user_id, username, question, answer, model_name, tokens_used, response_time,
        status, error_message, rating, feedback, created_at, updated_at
    </sql>

    <!-- 插入问答记录 -->
    <insert id="insert" parameterType="com.wwy.Entity.QaRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO qa_records
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="username != null">username,</if>
            <if test="question != null">question,</if>
            <if test="answer != null">answer,</if>
            <if test="modelName != null">model_name,</if>
            <if test="tokensUsed != null">tokens_used,</if>
            <if test="responseTime != null">response_time,</if>
            <if test="status != null">status,</if>
            <if test="errorMessage != null">error_message,</if>
            <if test="rating != null">rating,</if>
            <if test="feedback != null">feedback,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="username != null">#{username},</if>
            <if test="question != null">#{question},</if>
            <if test="answer != null">#{answer},</if>
            <if test="modelName != null">#{modelName},</if>
            <if test="tokensUsed != null">#{tokensUsed},</if>
            <if test="responseTime != null">#{responseTime},</if>
            <if test="status != null">#{status},</if>
            <if test="errorMessage != null">#{errorMessage},</if>
            <if test="rating != null">#{rating},</if>
            <if test="feedback != null">#{feedback},</if>
        </trim>
    </insert>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM qa_records
        WHERE id = #{id}
    </select>

    <!-- 更新问答记录 -->
    <update id="updateById" parameterType="com.wwy.Entity.QaRecord">
        UPDATE qa_records
        <set>
            <if test="answer != null">answer = #{answer},</if>
            <if test="tokensUsed != null">tokens_used = #{tokensUsed},</if>
            <if test="responseTime != null">response_time = #{responseTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="errorMessage != null">error_message = #{errorMessage},</if>
            <if test="rating != null">rating = #{rating},</if>
            <if test="feedback != null">feedback = #{feedback},</if>
            updated_at = CURRENT_TIMESTAMP,
        </set>
        WHERE id = #{id}
    </update>

    <!-- 分页查询问答记录 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM qa_records
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 统计问答记录总数 -->
    <select id="countRecords" resultType="int">
        SELECT COUNT(*)
        FROM qa_records
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

    <!-- 查询用户最近的问答记录 -->
    <select id="selectRecentByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM qa_records
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
        LIMIT #{limit}
    </select>

    <!-- 删除问答记录 -->
    <delete id="deleteById">
        DELETE FROM qa_records WHERE id = #{id}
    </delete>

    <!-- 批量删除问答记录 -->
    <delete id="batchDelete">
        DELETE FROM qa_records
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 统计用户问题数量 -->
    <select id="countUserQuestions" resultType="int">
        SELECT COUNT(*)
        FROM qa_records
        WHERE user_id = #{userId}
    </select>

    <!-- 获取热门问题 -->
    <select id="selectPopularQuestions" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM qa_records
        WHERE status = 'completed'
        AND rating >= 4
        ORDER BY rating DESC, created_at DESC
        LIMIT #{limit}
    </select>

</mapper> 