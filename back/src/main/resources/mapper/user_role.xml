<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wwy.Mapper.UserRoleMapper">
    
    <!-- 用户角色关联结果映射 -->
    <resultMap id="UserRoleResultMap" type="com.wwy.Entity.UserRole">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    
    <!-- 添加用户角色关联 -->
    <insert id="addUserRole" parameterType="com.wwy.Entity.UserRole" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_role (user_id, role_id, create_time)
        VALUES (#{userId}, #{roleId}, #{createTime})
    </insert>
    
    <!-- 批量添加用户角色关联 -->
    <insert id="batchAddUserRole" parameterType="java.util.List">
        INSERT INTO user_role (user_id, role_id, create_time)
        VALUES 
        <foreach collection="userRoles" item="userRole" separator=",">
            (#{userRole.userId}, #{userRole.roleId}, #{userRole.createTime})
        </foreach>
    </insert>
    
    <!-- 删除用户角色关联 -->
    <delete id="deleteUserRole">
        DELETE FROM user_role WHERE id = #{id}
    </delete>
    
    <!-- 根据用户ID删除该用户的所有角色关联 -->
    <delete id="deleteUserRolesByUserId">
        DELETE FROM user_role WHERE user_id = #{userId}
    </delete>
    
    <!-- 根据角色ID删除该角色的所有用户关联 -->
    <delete id="deleteUserRolesByRoleId">
        DELETE FROM user_role WHERE role_id = #{roleId}
    </delete>
    
    <!-- 根据用户ID和角色ID删除特定的用户角色关联 -->
    <delete id="deleteUserRoleByUserIdAndRoleId">
        DELETE FROM user_role WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>
    
    <!-- 查询用户角色关联 -->
    <select id="getUserRoleById" resultMap="UserRoleResultMap">
        SELECT * FROM user_role WHERE id = #{id}
    </select>
    
    <!-- 根据用户ID查询该用户的所有角色关联 -->
    <select id="getUserRolesByUserId" resultMap="UserRoleResultMap">
        SELECT * FROM user_role WHERE user_id = #{userId}
    </select>
    
    <!-- 根据角色ID查询拥有该角色的所有用户关联 -->
    <select id="getUserRolesByRoleId" resultMap="UserRoleResultMap">
        SELECT * FROM user_role WHERE role_id = #{roleId}
    </select>
    
    <!-- 检查用户是否拥有特定角色 -->
    <select id="checkUserHasRole" resultType="int">
        SELECT COUNT(*) FROM user_role WHERE user_id = #{userId} AND role_id = #{roleId}
    </select>
</mapper> 