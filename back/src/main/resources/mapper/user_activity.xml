<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wwy.Mapper.UserActivityMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.wwy.Entity.UserActivity">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="action_type" property="actionType" jdbcType="VARCHAR"/>
        <result column="action_description" property="actionDescription" jdbcType="VARCHAR"/>
        <result column="target_type" property="targetType" jdbcType="VARCHAR"/>
        <result column="target_id" property="targetId" jdbcType="VARCHAR"/>
        <result column="ip_address" property="ipAddress" jdbcType="VARCHAR"/>
        <result column="user_agent" property="userAgent" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, user_id, username, action_type, action_description, target_type, target_id,
        ip_address, user_agent, status, created_at
    </sql>

    <!-- 插入用户活动记录 -->
    <insert id="insert" parameterType="com.wwy.Entity.UserActivity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_activities
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="username != null">username,</if>
            <if test="actionType != null">action_type,</if>
            <if test="actionDescription != null">action_description,</if>
            <if test="targetType != null">target_type,</if>
            <if test="targetId != null">target_id,</if>
            <if test="ipAddress != null">ip_address,</if>
            <if test="userAgent != null">user_agent,</if>
            <if test="status != null">status,</if>
            <if test="createdAt != null">created_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="username != null">#{username},</if>
            <if test="actionType != null">#{actionType},</if>
            <if test="actionDescription != null">#{actionDescription},</if>
            <if test="targetType != null">#{targetType},</if>
            <if test="targetId != null">#{targetId},</if>
            <if test="ipAddress != null">#{ipAddress},</if>
            <if test="userAgent != null">#{userAgent},</if>
            <if test="status != null">#{status},</if>
            <if test="createdAt != null">#{createdAt},</if>
        </trim>
    </insert>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_activities
        WHERE id = #{id}
    </select>

    <!-- 查询最近的用户活动列表 -->
    <select id="selectRecentActivities" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_activities
        WHERE status = 1
        ORDER BY created_at DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 根据用户ID查询活动列表 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_activities
        WHERE user_id = #{userId} AND status = 1
        ORDER BY created_at DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 根据操作类型查询活动列表 -->
    <select id="selectByActionType" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_activities
        WHERE action_type = #{actionType} AND status = 1
        ORDER BY created_at DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 统计总活动数量 -->
    <select id="countAll" resultType="int">
        SELECT COUNT(*)
        FROM user_activities
        WHERE status = 1
    </select>

    <!-- 统计今日活动数量 -->
    <select id="countToday" resultType="int">
        SELECT COUNT(*)
        FROM user_activities
        WHERE status = 1
        AND DATE(created_at) = CURDATE()
    </select>

    <!-- 删除过期的活动记录 -->
    <delete id="deleteOldActivities">
        DELETE FROM user_activities
        WHERE created_at &lt; DATE_SUB(NOW(), INTERVAL #{days} DAY)
    </delete>

</mapper> 